/* pages/pay-result/pay-result.wxss */
page{
  background: #fff !important;
}
.pay-result {
  background: #fff;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pay-result .success, .pay-result .error {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pay-result .msg {
  color: #6899FF;
  font-size: 38rpx;
  padding-top: 80rpx;
  margin-bottom: 20rpx;
}

.time {
  color: #b4282d;
}

.pay-result .error .msg {
  color: #b4282d;
}

.pay-result .error .tips {
  color: #7f7f7f;
  margin-bottom: 70rpx;
}

.pay-result .error .tips .p {
  font-size: 26rpx;
  line-height: 42rpx;
  text-align: center;
}

.pay-result .success .tips {
  color: #7f7f7f;
  margin-bottom: 70rpx;
}

.pay-result .success .tips .p {
  font-size: 26rpx;
  line-height: 42rpx;
  text-align: center;
}

.van-button--small {
  padding: 0 20px !important;
  line-height: 32px !important;
  height: 34px !important;
}
.btns {
  display: flex;
  justify-content: flex-end;
}


.btn.btn-cancel {
  border: 2rpx solid #3B7CF0;
  color: #3B7CF0;
  background: none;
}

.btn {
  margin-left: 20rpx;
  background: #3B7CF0;
  font-size: 28rpx;
  width: 180rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 56rpx;
  color: #fff;
}

.btn::after {
  display: none;
}
