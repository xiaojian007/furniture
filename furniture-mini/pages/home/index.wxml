<!--pages/home/index.wxml-->
<view class="home">
  <view class="cu-bar search">
    <navigator url='/pages/category/index' class="action">
      <text class="cuIcon-sort"></text>
    </navigator>
    <view class="search-form radius">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="搜索" confirm-type="search"></input>
    </view>
  </view>
  <view>
    <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
      <view wx:for="{{tabList}}" wx:key="index" bindtap="swichNav" data-current="{{index}}" class="tab-item {{currentTab===index?'active':''}}">
        {{item.name}}
      </view>
    </scroll-view>
    <swiper class="tab-content" current="{{currentTab}}" duration="500" bindchange="switchTab" style="height:{{winHeight}}rpx">
      <swiper-item wx:for="{{tabList}}" wx:key="index">
        <block wx:if="{{currentTab===0}}">
          <view>434444444444555432</view>
        </block>
        <block wx:else>
          <homelist type-id="{{index}}" id="homeList{{index}}"></homelist>
        </block>
      </swiper-item>
    </swiper>
  </view>
</view>