/* pages/home/index.wxss */

.cu-bar {
  background: #fff;
}

.home {
  background: #fff;
  /* padding: 0 30rpx; */
}

.home .tab-h,
.home .cu-bar {
  padding: 0 30rpx;

}

.home .cu-bar .action {
  padding: 0 26rpx;
  background: #f3f3f3;
  border-radius: 10rpx;
  line-height: 64rpx;
  margin-left: 0;
}

.home .cu-bar .search-form {
  margin: 0 0 0 9rpx;
}

.home .cu-bar .action>text {
  font-size: 24rpx;
}

.home .cu-bar .action>text:active {
  background: #fff;
}

.tab-h {
  height: 94rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 0 14rpx;
  line-height: 80rpx;
  background: #fff;
  white-space: nowrap;
}

.tab-item {
  margin-right: 30rpx;
  font-size: 22rpx;
  display: inline-block;
}

.tab-item:last-child {
  margin-right: 0;
}

.tab-item.active {
  color: #3B7CF0;
  font-size: 30rpx;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 13rpx;
  width: 46rpx;
  position: absolute;
  bottom: 4rpx;
  left: 50%;
  margin-left: -23rpx;
  background-image: url('data:image/png;base64,');
  background-size: cover;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}

.home-content {
  height: calc(100vh - 100rpx);
  overflow: hidden;
}

/* 返回顶部 */
.go-top {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 150rpx;
  background: rgba(0, 0, 0, .3);
  right: 30rpx;
  border-radius: 50%;
}


/* 预约 */
.reservation {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50rpx;
  background: rgba(0, 0, 0, .3);
  right: 30rpx;
  border-radius: 50%;
}