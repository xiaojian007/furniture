.search {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
}

.search .search-form {
  margin: 0 0 0 30rpx;
}

.header {
  width: 100%;
  height: 44px;
  border-top: 2rpx solid #e4e4e4;
  display: flex;
  background: #fff;
  line-height: 44px;
  position: fixed;
  top: 100rpx;
  z-index: 100;
}

.action .search-btn {
  background: none;
  color: #2786E4;
  padding: 0 0 0 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.action .search-btn::after {
  display: none;
}

.header view {
  flex: 1;
  color: #313131;
  font-size: 24rpx;
  text-align: center;
}

.header .active {
  color: #3B7CF0;
  font-size: 30rpx;
  font-weight: bold;
}

.wrapper {
  margin-top: 208rpx;
}

.order-box {
  padding: 0 15px;
}

.order-header {
  /* border-bottom: 1rpx solid #e4e4e4; */
  padding-top: 10rpx;
}

.order-header .title {
  font-size: 30rpx;
  color: #333;
}

.order-header .cont {
  /* display: block; */
  font-size: 30rpx;
  color: #fd4a5f;
}

.order-cont {
  padding: 15rpx 0;
  justify-content: space-between;
}

.order-cont .order-num text,
.order-cont .order-time text {
  color: #777;
  font-size: 26rpx;
}

.order-shop {
  padding: 16rpx 0 16rpx 0;
}

.order-shop-left,
.order-shop-left image {
  width: 160rpx;
  height: 160rpx;
  /* border: 1rpx solid #e4e4e4; */
  margin-right: 15rpx;
  display: inline-block;
  background: #fff;
}

.order-shop .num {
  float: right;
}

.order-btn {
  padding: 18rpx 0 18rpx 0;
}

.order-btn .order-left {
  flex: 3;
}

.order-btn .order-left text,
.order-btn .order-left .text {
  font-size: 30rpx;
}

.order-btn .order-left .text {
  color: #777;
}

.order-btn .order-right {
  flex: 3;
}

.order-list-box .left {
  flex: 4;
  overflow: hidden;
  position: relative;
}

.order-list-box .right {
  flex: 1;
}

.goods-number {
  position: absolute;
  right: 12px;
  top: 35%;
  font-size: 28rpx;
  color: #777;
}

.btn-default {
  border-radius: 4px;
  border: 1rpx solid #ccc;
  padding: 6rpx 20rpx;
  font-size: 28rpx;
  color: #555;
  float: right;
}

.btn-main {
  border-radius: 4px;
  border: 1rpx solid #fd4a5f;
  padding: 6rpx 20rpx;
  font-size: 28rpx;
  color: #fd4a5f;
  margin-left: 10rpx;
  float: right;
}

.user-orderJtou {
  font-size: 24rpx;
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -20rpx;
  color: #888;
}

.order-img_list {
  background: #fff;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
}

.order-right-name {
  position: absolute;
  top: 50%;
  left: 180rpx;
  font-size: 30rpx;
  color: #555;
  width: 100%;
  margin-top: -46rpx;
  line-height: 1.6;
}


/* pages/ucenter/order/order.wxss */

.nav {
  position: fixed;
  width: 750rpx;
  top: 0;
  z-index: 10;
}

.loading-center {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.no-order {
  height: 80vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no-order .img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.no-order .txt {
  font-size: 26rpx;
  color: #999;
}

.orders {
  height: 100%;
}

.order {
  background: #fff;
  padding-left: 32rpx;
  margin-top: 20rpx;
}

.order .header-item {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 0 0;
  border-bottom: 1px solid #f4f4f4;
  font-size: 27rpx;
  color: #555;
}

.header-item .delete {
  width: 45rpx;
  height: 45rpx;
}

.order-product-item .product {
  display: flex;
  align-items: center;
  height: 180rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.order-product-item .product:last-child {
  border-bottom: 0 !important;
}

.order .money {
  text-align: right;
  font-size: 28rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  margin-bottom: 10rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.order .money .text {
  color: #F0563C;
}

.product .img {
  height: 145rpx;
  width: 145rpx;
  border-radius: 4rpx;
  background-color: #f4f4f4;
}

.product .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  margin-left: 20rpx;
  width: 430rpx;
}

.product .title {
  color: #333;
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product .specDesc {
  color: #999;
  font-size: 25rpx;
}

.product .status {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  height: 100rpx;
  width: 100rpx;
}

.status .package {
  color: #555;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.status .txt {
  color: #b4282d;
  font-size: 25rpx;
}

.status .txt-success {
  font-size: 25rpx;
  color: #2bab52;
}

.foot {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx 10rpx 0;
  font-size: 27rpx;
  color: #555;
}

.foot .order-time {
  color: #999;
  font-size: 25rpx;
}

.foot .btns {
  display: flex;
  justify-content: flex-end;
}

.btn.btn-cancel {
  border: 2rpx solid #3B7CF0;
  color: #3B7CF0;
  background: none;
}

.btn {
  margin-left: 20rpx;
  background: #3B7CF0;
  font-size: 28rpx;
  width: 180rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 56rpx;
  color: #fff;
}

.btn::after {
  display: none;
}

.yoshop-notcont {
  padding-top: 100rpx;
}