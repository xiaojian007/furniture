<view class="container search-list">
  <view class="list-header">
    <view class="index-search-box dis-flex" style="position:static">
      <view class="cu-bar search">
        <view class="search-form radius">
          <text class="cuIcon-search"></text>
          <input type="text" placeholder="搜索" confirm-type="search"></input>
        </view>
        <view class="action">
          <text>搜索</text>
        </view>
      </view>
    </view>
    <view class="store_nav_cont dis-flex b-f b-b">
      <view bindtap="switchSortType" data-type="all" class="flex-box t-c p-r" data-index="0 " id="list-{{sortType==='all'?true:0}}">
        <text>综合排序</text>
      </view>
      <view bindtap="switchSortType" data-type="sales" class="flex-box t-c p-r" data-index="1" id="list-{{sortType==='sales'?true:0}}">
        <text> 销量</text>
      </view>
      <view bindtap="switchSortType" data-type="new" class="flex-box t-c p-r" data-index="4" id="list-{{sortType==='new'?true:0}}">
        <text>新品</text>
      </view>
      <view bindtap="switchSortType" data-type="price" class="flex-box t-c p-r" data-index="2" id="list-{{sortType==='price'?true:0}}">
        <text class="price"> 价格</text>
        <text class="iconfont icon-jiantou-copy tf-180 top_jiantou {{sortPrice?'':'active'}}"></text>
        <text class="iconfont icon-jiantou-copy bot_jiantou {{sortPrice?'active':''}}"></text>
      </view>

      <!-- <view bindtap="toSynthesize" class="flex-box t-c p-r" data-index="sort_order" id="list-0">
        <text>筛选 </text>
        <text class="f-22 iconfont icon-shaixuan1 col-7" style="padding-left:2rpx"></text>
      </view> -->

    </view>
    <scroll-view bindscrolltolower="bindDownLoad" class="weui-panel weui-panel_access" scroll-y="true" style="height: {{scrollHeight}}px;" wx:if="{{list.data.length > 0}}">
     <view class="category-list">
					<navigator class="list b-f" hover-class="none" url="../goods/index?goods_id={{item.goods_id}}" wx:for="{{[1,1,2,3,4,3]}}" wx:key="index">
						<view class="left">
							<view class="img">
								<image class="goodsImg" mode="aspectFill" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1586600782721&di=98630207a9dd72bf14dd816c5d526888&imgtype=0&src=http%3A%2F%2Fm.tuniucdn.com%2Ffb2%2Ft1%2FG2%2FM00%2FAF%2F3F%2FCii-T1gA04iIcXfZABp5vaXUmGYAADY2wOtpLIAGnnV994_w500_h280_c1_t0.png"></image>
							</view>
						</view>
						<view class="right">
							<view class="cont">
								<view class="f-24 title twolist-hidden m-top10">你好反反复复你好反反复复你好反反复复你好反反复复你好反反复复</view>
								<view class="type f-20 col-9">美式实木套房</view>
								<view class="price f-24 col-m f-w">￥333.33</view>
								<view class="sold f-20 col-9">已售29</view>
							</view>
						</view>
					</navigator>
				</view>
      <view hidden="{{!no_more}}" class="no-more f-30">亲, 没有更多了</view>
    </scroll-view>
  </view>

  <view wx:if="{{!noList && !list.data.length}}" class="yoshop-notcont">
    <view class="img">
      <image mode="aspectFit" src="../../image/no-product.png"></image>
    </view>
    <text class="cont">亲, 没有相关内容</text>
  </view>

</view>