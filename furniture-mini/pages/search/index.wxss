  height: 190rpx;
}
.store_nav_cont {
  padding: 10px 0;
}

.store_nav_cont #list-true {
  color: #3B7CF0;
  font-size: 28rpx;
  font-weight: bold;
}

.store_nav_cont #list-0 {
  color: #333;
  font-size: 28rpx;
}

.store_nav_cont #list-0 .icon-fenlei {
  padding-left: 8rpx;
  color: #777;
  font-size: 28rpx;
}

.store_nav_cont #list-true .icon-fenlei {
  padding-left: 8rpx;
  color: #3B7CF0;
  font-size: 28rpx;
}

.store_nav_cont .price {
  padding-right: 30rpx;
}

.store_nav_cont #list-0 .top_jiantou {
  position: absolute;
  right: 52rpx;
  top: 50%;
  margin-top: -20rpx;
  font-size: 14rpx;
  color: #777;
}

.store_nav_cont #list-true .top_jiantou {
  position: absolute;
  right: 52rpx;
  top: 50%;
  margin-top: -20rpx;
  font-size: 14rpx;
  color: #777;
}

.store_nav_cont #list-0 .bot_jiantou {
  position: absolute;
  right: 52rpx;
  top: 50%;
  margin-top: -2rpx;
  font-size: 14rpx;
  color: #777;
}

.store_nav_cont #list-true .bot_jiantou {
  position: absolute;
  right: 52rpx;
  top: 50%;
  margin-top: -2rpx;
  font-size: 14rpx;
  color: #777;
}

.store_nav_cont #list-true .top_jiantou.active,
.store_nav_cont #list-true .bot_jiantou.active {
  color: #3B7CF0;
}

/* asd */

.container {
  position: relative;
}

.cate-btn {
  background: #3B7CF0;
  bottom: 18rpx;
  right: 18rpx;
  font-size: 20rpx;
  color: #fff;
  padding: 4px 18rpx;
}

.index-cont-search icon {
  left: 0;
  margin-left: 20rpx;
}

.index-search-box {
  top: 1rpx;
  left: 0rpx;
  right: 0rpx;
  z-index: 999;
  position: fixed;
  background: #fff;
  /* padding: 18rpx 13rpx; */
}

.index-search {
  border-bottom: 0;
  background: #fff;
  border-radius: 50rpx;
  overflow: hidden;
  position: relative;
  font-size: 32rpx;
  color: #999;
  box-sizing: border-box;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0 10rpx;
}

.list-right {
  width: 60rpx;
}

.list-right text {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 40rpx;
}

.list-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.no-more {
  text-align: center;
  color: #737373;
  margin: 10px 0;
}

.category-list {
  overflow: hidden;
}

.category-list .list {
  box-sizing: border-box;
  width: 50%;
  float: left;
}

.category-list.arrange .list {
  overflow: hidden;
  padding: 15rpx;
  border-bottom: 1rpx solid #f7f7f7;
  width: 100%;
}

.category-list.arrange .list .left {
  width: 35%;
  float: left;
}

.category-list.arrange .list .right {
  width: 65%;
  float: left;
}

.category-list.arrange .list .left .img image {
  width: 220rpx;
  height: 220rpx;
}


.cu-bar{
  width: 100%
}


.tab-h {
  height: 94rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  background: #fff;
  white-space: nowrap;
}

.tab-item {
  margin-right: 30rpx;
  font-size: 22rpx;
  display: inline-block;
}

.tab-item:last-child {
  margin-right: 0;
}

.tab-item.active {
  color: #3B7CF0;
  font-size: 30rpx;
  position: relative;
}
